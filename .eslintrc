{
    'extends': 'airbnb',
    'env': {
        'node': true,
        'jasmine': true
    },
    'plugins': [
        'promise',
        'node'
    ],
    'rules': {
        'indent': ['error', 4, { 'SwitchCase': 1 }],
        'key-spacing': 'off',
        'padded-blocks': 'off',
        'spaced-comment': 'off',
        'no-multi-spaces': 'off',
        'comma-dangle': 'off',
        'new-cap': 'off',
        'func-names': 'off',
        'func-call-spacing': 'off',
        'no-spaced-func': 'off',
        'space-before-function-paren': 'off',
        'no-underscore-dangle': 'off',
        'arrow-parens': [2, 'always'],
        'no-dynamic-require': 'off',
        'global-require': 'off',
        'consistent-return': 'off',
        'radix': 'off',
        'no-shadow': 'off',
        'no-console': 'off',
        'no-use-before-define': 'off',
        'no-else-return': 'off',
        'no-nested-ternary': 'off',
        'max-len': [2, { 'code': 200 }],
        'no-confusing-arrow': 'off',
        'no-mixed-operators': 'off',
        'arrow-body-style': 'off'
    }
}
